@model SignUpVendorVM

<div class="container mt-3 mb-4">
    <div class="col-12">
        <div class="custom_css_for_form vander_form">
            <h3 class="text-center mb-5">Add vendor</h3>
            <form enctype="multipart/form-data" asp-controller="Restaurant" asp-action="AddVendor" method="post">
                <div class="form-row ">
                    <div class="col">
                        <label>First Name</label>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="First name">
                        <span asp-validation-for="FirstName" class="text-danger small text-uppercase"></span>
                    </div>
                    <div class="col">
                        <label>Last Name</label>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Last name">
                        <span asp-validation-for="LastName" class="text-danger small text-uppercase"></span>
                    </div>
                </div>
                <div class="form-group mt-2">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger small text-uppercase"></span>
                </div>
                <div class="form-group mt-2">
                    <label>Store Name</label>
                    <input type="text" class="form-control" asp-for="StoreName" aria-describedby="emailHelp" placeholder="Store Name">
                    <span asp-validation-for="StoreName" class="text-danger small text-uppercase"></span>
                </div>
                <div class="form-row ">
                    <div class="col">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="First name">
                        <span asp-validation-for="Password" class="text-danger small text-uppercase"></span>
                    </div>
                    <div class="col">
                        <label asp-for="ConfirmPassword"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Last name">
                        <span asp-validation-for="ConfirmPassword" class="text-danger small text-uppercase"></span>
                    </div>
                </div>
                <div class="form-row ">
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>Number of Location</label>
                        <select asp-for="NunberOfLocationName" class="form-control" asp-items="Model.NunberOfLocation">
                            <option>Select From List</option>
                        </select>
                        <span asp-validation-for="CuisineId" class="text-danger small text-uppercase"></span>

                    </div>
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>Type of cuisine</label>
                        <select asp-for="CuisineId" class="form-control" asp-items="Model.Cuisine">
                            <option>Select From List</option>
                        </select>
                        <span asp-validation-for="CuisineId" class="text-danger small text-uppercase"></span>

                    </div>
                </div>
                <div class="form-group mt-2">
                    <label>Address or location</label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="Address">
                    <span asp-validation-for="Address" class="text-danger small text-uppercase"></span>
                </div>
                <div class="form-row mt-2">
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>Area</label>
                        <select asp-for="AreaId" class="form-control" asp-items="Model.Area">
                            <option>Select From List</option>
                        </select>
                        <span asp-validation-for="AreaId" class="text-danger small text-uppercase"></span>

                    </div>
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>Category </label>
                        <select asp-for="CategoryId" class="form-control" asp-items="Model.Category">
                            <option>Select From List</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small text-uppercase"></span>

                    </div>
                </div>
                <div class="form-row mt-2">
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>Phone</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number">
                        <span asp-validation-for="PhoneNumber" class="text-danger small text-uppercase"></span>
                    </div>
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>website URL</label>
                        <input type="text" asp-for="Website_Url" class="form-control" placeholder="https://thenextway.com/">
                        <span asp-validation-for="Website_Url" class="text-danger small text-uppercase"></span>
                    </div>
                    <br />
                    <div class="col-lg-6 col-md-12 col-12">
                        <label>Upload Logo</label>
                        @*<input type="text" asp-for="Website_Url" class="form-control" placeholder="https://thenextway.com/">*@
                        <input type="file" asp-for="SubmitterPicture">

                    </div>

                </div>
                <div class="row mt-2">
                    <div class="col-12">

                    </div>
                    <div class="row">

                        <div class="col-12">
                            <button type="submit" class="btn btn-success">Add Vendor</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js"></script>
<script>
    $("#FormCreate").on("submit", function (e) {
        e.preventDefault();

        var frm = $(this);

        $.ajax({
            url: frm.attr('action'),
            type: frm.attr('method'),
            data: frm.serialize(),
            success: function (response) {
                if (response.status == true) {
                    bootbox.alert({ message: response.message, size: 'small' });
                } else {
                    bootbox.alert({ message: response.message, size: 'small' });
                }
            },
            error: function () {

            }
        });

    });
</script>

