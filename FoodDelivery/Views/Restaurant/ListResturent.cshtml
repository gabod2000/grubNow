@{
    ViewData["Title"] = "ListResturentByArea";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

@model IEnumerable<FoodDelivery.Models.ListOfResturantVM>
@{
    ViewBag.Title = "Home Page";
    var path = System.IO.Directory.GetCurrentDirectory() + "/wwwroot/Uploads";
}

@if (Model.Count() > 0)
{
    @if (System.IO.Directory.GetFiles(path, "*").Count() > 0)
    {

        <div class="row mt-3">
            @foreach (var resturantVM in Model)
            {
                <div class="card col-md-3 col-sm-12 col-lg-3 p-4" style="width: 18rem;z-index:-1">
                    <img class="card-img-top" src="/Uploads/@resturantVM.UniqueFileName" height="250" width="250" />
                    <div class="card-body">
                        <h5 class="card-title">Resturant Name</h5>
                        <p class="card-text">@resturantVM.StoreName</p>
                        <label class="card-title">Rersturant Site</label>
                        <p class="card-text">@resturantVM.Website_Url</p>
                    </div>
                </div>

            }
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible fade show m-5" role="alert">
            <strong>Sorry </strong> No Images Found .
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }


}
else
{
    <div class="alert alert-warning alert-dismissible fade show m-5" role="alert">
        <strong>Sorry </strong> No Resturent Found In This Area .
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

