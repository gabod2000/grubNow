            </div>
            <div class="col-lg-2 col-md-4 col-6 mb-2">
                <img src="~/img/img3.webp" class="mb-1" alt="">
                <b>Mexican</b>
            </div>
            <div class="col-lg-2 col-md-4 col-6 mb-2">
                <img src="~/img/img4.webp" class="mb-1" alt="">
                <b>Fast Food</b>
            </div>
            <div class="col-lg-2 col-md-4 col-6 mb-2">
                <img src="~/img/img5.webp" class="mb-1" alt="">
                <b>Italian</b>
            </div>
            <div class="col-lg-2 col-md-4 col-6 mb-2">
                <img src="~/img/img4.webp" class="mb-1" alt="">
                <b>Fast Food</b>
            </div>
            @await Component.InvokeAsync("CuisineList")
        </div>
    </div>
    <!-- ======= body ========= -->
    <script>
        $(document).ready(function () {
            $(".input_dr").on("focus", function () {
                $(".current_location").show();
            });
        });
    </script>
</body>

</html>